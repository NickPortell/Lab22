
@{
    ViewBag.Title = "ShopIndex";
}

<h2>Index</h2>

<a href="../Shop/ItemForm">Add a new Product!</a>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Price</th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.ItemsList)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Quantity</td>
            <td>$@item.Price</td>
            <td>
                <a href="../Shop/UpdateItem?itemID=@item.Id" class="btn-default">Edit</a>
                <a href="../Shop/DeleteItem?itemID=@item.Id" class="btn-default">Delete</a>
            </td>

        </tr>
    }
</table>