
@{
    ViewBag.Title = "UpdateItem";
}

<h2>UpdateItem</h2>
@model Lab21.Models.Item


<form action="../Shop/SaveChanges" method="post">
    <input type="hidden" name="Id" value="@Model.Id" placeholder="@Model.Id" />
    <input type="text" name="Name" value="@Model.Name" placeholder="@Model.Name" />
    <input type="text" name="Description" value="@Model.Description" placeholder="@Model.Description" />
    <input type="number" name="Quantity" value="@Model.Quantity" placeholder="@Model.Quantity" />
    <input type="text" name="Price" value="@Model.Price" placeholder="@Model.Price" />


    <input type="submit" value="Update Item!" class="btn-success" />
</form>

<p class="danger">@ViewBag.ErrorMessage</p>
